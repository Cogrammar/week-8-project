<h1>Update word!<%= @your_choice_word.your_choice_word() %></h1>

<form action="/words/<%= @your_choice_word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Update word choice</label>
  <input id="your_choice_word" name="your_choice_word" type="text">

  <button type="submit">Update</button>
</form>
<form action="/words/<%= @your_choice_word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>

<p><a href="/words">Return to words list</a></p>